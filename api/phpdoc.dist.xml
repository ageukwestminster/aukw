<?xml version="1.0" encoding="UTF-8" ?>
<!-- To use this navigate to the api directory and run 'php ../phpDocumentor.phar'-->
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/phpDocumentor/phpDocumentor/master/data/xsd/phpdoc.xsd"
>
    <title>phpDocumentor</title>
    <paths>
        <!-- Documentation will be generated in this directory, overwriting anything already there-->
        <output>../documentation/api</output>
        <cache>../documentation/cache</cache>
    </paths>
    <version number="latest">
        <api format="php">
            <source dsn=".">
                <path>.</path>
            </source>
            <ignore hidden="true" symlinks="true">
                <path>vendor/**/*</path>
                <path>uploads/**/*</path>
            </ignore>
        </api>
    </version>
</phpdocumentor>